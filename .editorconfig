root = true

# All files
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# SQL files
[*.sql]
indent_style = space
indent_size = 4

# YAML files (including pipeline definitions)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Configuration files
[{pyproject.toml,*.toml}]
indent_style = space
indent_size = 2
